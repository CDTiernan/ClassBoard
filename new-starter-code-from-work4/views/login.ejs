<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
    <link rel='stylesheet' href='/includes/bootstrap/css/bootstrap.min.css' />
  </head>
  <body>
    <div class='container'>
      <div class='row vertical-center-row'>
        <div class='col-md-4 col-md-offset-4'>

          <h1 style='text-align:center;'><%= title %></h1>
          <hr>
          <br>

          <form name='login'>
            <div class="form-group">
              <!--<label for="userName">User Name</label>-->
              <input type="username" class="form-control" id="userName" placeholder="user name">
            </div>
            <div class="form-group">
              <!--<label for="password">Password</label>-->
              <input type="password" class="form-control" id="password" placeholder="password">
            </div>
            <br>
            <div class="form-group">
              <div class="row">
                <div class='col-md-2 col-md-offset-2'>
                  <button class="btn btn-default" onclick="document.login.action='/user/main';document.form.submit();">Sign In</button>
                </div>
                <div class='col-md-2 col-md-offset-2'>
                  <button class="btn btn-primary" onclick="document.login.action='/user/signUp';document.form.submit();">Sign Up</button>
                </div>
              </div>
            </div>
          </form>


          <h2><%= message %></h2>

        </div>
      </div>
    </div>
  </body>
</html>
