<!DOCTYPE html>
<html>

<head>
  <title>
    <%=title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/includes/bootstrap/css/bootstrap.min.css' />
</head>

<body>
  <div class='container'>
    <div class='row vertical-center-row'>
      <div class='col-md-4 col-md-offset-4'>
        <h1 style='text-align:center;'>
          <%=title %>
        </h1>
        <hr>
        <br>
        <!--<p style='text-align:center;'><%=subtitle %></p> -->
        <div style='text-align:center;'>
          <%=message %>
        </div>
        <br>
        <!--
          <form method="post" action="/user/createUser">
            User Name: <input type="text" name="username"> <br>
            Password:  <input type="password" name="password"> <br>
            <button>Create User</button>
          </form> -->
        <form name='signup'>

          <div class='form-group'>
            <input type="text" class="form-control" id="userName" name="username" placeholder="choose a username">
          </div>
          <div class='form-group'>
            <input type="text" class="form-control" id="password" name="password" placeholder="choose a password">
          </div>
          <br>
          <div class='form-group'>
            <div class='row'>
              <div class='col-md-1 col-md-offset-1'>
                <button class="btn btn-default" onclick="document.signup.method='post';document.signup.action='/user/createUser';document.signup.submit();">Create Account</button>
              </div>
              <div class='col-md-1 col-md-offset-4'>
                <button class="btn btn-success" onclick="document.signup.method='get';document.signup.action='/user/login';document.signup.submit();">Back to Login</button>
              </div>
            </div>
          </div>
        </form>
        <br>
        <!--<p><a href="/user/main">Back to Login</a></p>-->
      </div>
    </div>
  </div>
</body>

</html>
